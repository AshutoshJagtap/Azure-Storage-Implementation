
@{
    ViewData["Title"] = "UploadBlob";
}

<form method="post" enctype="multipart/form-data" asp-controller="BlobStorage" asp-action="UploadBlob">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload Blob</p>
            <input type="file" name="blob"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <p>File Title</p>
            <input type="text" name="title"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <p>File Description</p>
            <input type="text" name="description"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

